<%- include('layout/header') %>

  <div class="container">
    <div class="row">
      <div class="col-lg-6 mx-auto mt-4">
        <div class="card">
          <div class="card-header text-center">
            <h3>Update Points System Here !!</h3>
          </div>
          <div class="card-body p-4">
            <form action="/addPoint" method="POST" id="addPoint">

              <div class="form-group mb-3">
                <label for="wonPoint">WonPoint</label>
                <input type="number" name="wonPoint" id="wonPoint" class="form-control" required min="0" />
              </div>

              <div class="form-group mb-3">
                <label for="drawPoint">DrawPoint</label>
                <input type="number" name="drawPoint" id="drawPoint" class="form-control" required min="0" />
              </div>

              <div class="form-group mb-3 text-center">
                <input type="submit" name="submit" value="UpdatePoint" class="btn btn-success" />
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('layout/footer') %>